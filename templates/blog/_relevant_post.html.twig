{% if posts is not empty %}
    <div id="post-relevant" class="well">
        <h4>{{'label.relevant_post'|trans}} :</h4>
        <div class="row">
            {% for post in posts  %}
                <div class="col-sm-3">
                    {% set thumbnail = 'https://i.ytimg.com/vi/'~ post.videoId ~'/maxresdefault.jpg' %}
                    {% if post.imageName and post.videoId is null %}
                        {% set thumbnail = asset('/uploads/images/' ~ post.imageName) | imagine_filter('post_show') %}
                    {% endif %}
                    <a href="{{ path('blog_post', {slug: post.slug}) }}">
                        <img class="responsive" src="{{thumbnail}}" title="{{ post.title }}" alt="{{ post.title }}" />
                    </a>
                </div>
                <div class="col-sm-9">
                    <a href="{{ path('blog_post', {slug: post.slug}) }}">
                        {{ post.title }}
                    </a>
                    <p>{{ post.summary }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}
