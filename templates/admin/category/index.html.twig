{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_category_index' %}

{% block main %}
    <h1>{{ 'title.category_list'|trans }}</h1>

    <table class="table table-striped table-middle-aligned">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">{{ 'label.title'|trans }}</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_category_edit', {id: category.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'post.no_posts_found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_category_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_post'|trans }}
        </a>
    </div>
    <div class="section actions">
        <a href="{{ path('admin_post_index') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-arrow-left" aria-hidden="true"></i> {{ 'action.back'|trans }}
        </a>
    </div>
{% endblock %}
